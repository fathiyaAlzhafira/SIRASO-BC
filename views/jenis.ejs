<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Jenis Makanan</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-gray-100 text-gray-800">

  <%- include('partials/headersearch') %>

  <main class="mx-8 my-6 space-y-6">

    <!-- Kotak Jenis Makanan -->
    <div class="bg-white shadow rounded-md p-6 text-center">
      <h2 class="text-green-800 text-xl font-semibold mb-4">Jenis Makanan</h2>

      <div id="jenis-buttons" class="flex flex-wrap justify-center gap-4">
        <button onclick="filterJenis(this, 'Berkuah')" class="filterjenis-btn bg-green-700 text-white border-green-700 border px-6 py-2 rounded-full shadow font-medium transition duration-200">
          Berkuah
        </button>
        <button onclick="filterJenis(this, 'Pedas')" class="filterjenis-btn bg-white text-gray-800 border border-gray-300 px-6 py-2 rounded-full shadow font-medium transition duration-200 hover:bg-green-100">
          Pedas
        </button>
        <button onclick="filterJenis(this, 'Manis')" class="filterjenis-btn bg-white text-gray-800 border border-gray-300 px-6 py-2 rounded-full shadow font-medium transition duration-200 hover:bg-green-100">
          Manis
        </button>
        <button onclick="filterJenis(this, 'Kering')" class="filterjenis-btn bg-white text-gray-800 border border-gray-300 px-6 py-2 rounded-full shadow font-medium transition duration-200 hover:bg-green-100">
          Kering
        </button>
        <button onclick="filterJenis(this, 'Asin')" class="filterjenis-btn bg-white text-gray-800 border border-gray-300 px-6 py-2 rounded-full shadow font-medium transition duration-200 hover:bg-green-100">
          Asin
        </button>
        <button onclick="filterJenis(this, 'Hangat')" class="filterjenis-btn bg-white text-gray-800 border border-gray-300 px-6 py-2 rounded-full shadow font-medium transition duration-200 hover:bg-green-100">
          Hangat
        </button>
      </div>
    </div>

    <!-- Kotak Hasil Jenis Makanan -->
<div class="bg-white shadow rounded-md p-6 text-left">
  <div class="flex items-center gap-2">
    <h3 class="text-lg font-medium text-gray-700">Menampilkan jenis makanan:</h3>
    <div id="jenis-terpilih" class="text-green-800 text-lg font-semibold">Berkuah</div>
  </div>
</div>


  </main>

  <!-- Script untuk interaksi -->
  <script>
    function filterJenis(button, jenis) {
      const allButtons = document.querySelectorAll('.filterjenis-btn');

      allButtons.forEach(btn => {
        btn.classList.remove('bg-green-700', 'text-white', 'border-green-700');
        btn.classList.add('bg-white', 'text-gray-800', 'border-gray-300');
      });

      button.classList.add('bg-green-700', 'text-white', 'border-green-700');
      button.classList.remove('bg-white', 'text-gray-800', 'border-gray-300');

      document.getElementById('jenis-terpilih').textContent = jenis;
    }
  </script>

</body>
</html>
