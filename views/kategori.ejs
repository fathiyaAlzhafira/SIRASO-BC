<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Kategori Makanan</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-gray-100 text-gray-800">

  <%- include('partials/headersearch') %>

  <main class="mx-8 my-6 space-y-6">

    <!-- Kotak Kategori Makanan -->
    <div class="bg-white shadow rounded-md p-6 text-center">
      <h2 class="text-green-800 text-xl font-semibold mb-4">Kategori Makanan</h2>

      <div id="kategori-buttons" class="flex flex-wrap justify-center gap-4">
        <button onclick="filterKategori(this, 'Nasi')" class="filterkategori-btn bg-green-700 text-white border-green-700 border px-6 py-2 rounded-full shadow font-medium transition duration-200">
          🍚 Nasi
        </button>
        <button onclick="filterKategori(this, 'Minuman')" class="filterkategori-btn bg-white text-gray-800 border border-gray-300 px-6 py-2 rounded-full shadow font-medium transition duration-200 hover:bg-green-100">
          🥤 Minuman
        </button>
        <button onclick="filterKategori(this, 'Lauk')" class="filterkategori-btn bg-white text-gray-800 border border-gray-300 px-6 py-2 rounded-full shadow font-medium transition duration-200 hover:bg-green-100">
          🍛 Lauk
        </button>
        <button onclick="filterKategori(this, 'Gorengan')" class="filterkategori-btn bg-white text-gray-800 border border-gray-300 px-6 py-2 rounded-full shadow font-medium transition duration-200 hover:bg-green-100">
          🔍 Gorengan
        </button>
        <button onclick="filterKategori(this, 'Mie')" class="filterkategori-btn bg-white text-gray-800 border border-gray-300 px-6 py-2 rounded-full shadow font-medium transition duration-200 hover:bg-green-100">
          🍜 Mie
        </button>
        <button onclick="filterKategori(this, 'Sup')" class="filterkategori-btn bg-white text-gray-800 border border-gray-300 px-6 py-2 rounded-full shadow font-medium transition duration-200 hover:bg-green-100">
          🍲 Sup
        </button>
        <button onclick="filterKategori(this, 'Snack')" class="filterkategori-btn bg-white text-gray-800 border border-gray-300 px-6 py-2 rounded-full shadow font-medium transition duration-200 hover:bg-green-100">
          🍰 Snack
        </button>
        <button onclick="filterKategori(this, 'Sandwich')" class="filterkategori-btn bg-white text-gray-800 border border-gray-300 px-6 py-2 rounded-full shadow font-medium transition duration-200 hover:bg-green-100">
          🍔 Sandwich
        </button>
      </div>
    </div>

   <!-- Kotak Hasil Kategori -->
<div class="bg-white shadow rounded-md p-6 text-left">
  <div class="flex items-center gap-2">
    <h3 class="text-lg font-medium text-gray-700">Menampilkan kategori:</h3>
    <div id="kategori-terpilih" class="text-green-800 text-lg font-semibold">Nasi</div>
  </div>
</div>

  </main>

  <!-- Script Interaksi -->
  <script>
    function filterKategori(button, kategori) {
      const allButtons = document.querySelectorAll('.filterkategori-btn');

      allButtons.forEach(btn => {
        btn.classList.remove('bg-green-700', 'text-white', 'border-green-700');
        btn.classList.add('bg-white', 'text-gray-800', 'border-gray-300');
      });

      button.classList.add('bg-green-700', 'text-white', 'border-green-700');
      button.classList.remove('bg-white', 'text-gray-800', 'border-gray-300');

      document.getElementById('kategori-terpilih').textContent = kategori;
    }
  </script>

</body>
</html>
